<UserControl x:Class="Minesweeper.GameCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Minesweeper"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid 
          MouseLeftButtonDown="GameCell_MouseLeftButtonDown" 
          MouseLeftButtonUp="GameCell_MouseLeftButtonUp" 
          MouseEnter="GameCell_MouseEnter" 
          MouseLeave="GameCell_MouseLeave" Background="Black"
          >
        <TextBlock Margin="3" Text="H" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Name="Text" FontSize="24" Foreground="Red"/>
    </Grid>
</UserControl>
